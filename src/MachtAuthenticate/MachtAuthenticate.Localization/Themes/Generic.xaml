<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:engine="clr-namespace:MachtAuthenticate.Localization.Engine">
    <Style TargetType="{x:Type engine:GapTextControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type engine:GapTextControl}">
                    <Border BorderBrush="SaddleBrown" BorderThickness="5">
                        <TextBlock
                            x:Name="PART_TextBlock"
                            MinWidth="100"
                            MinHeight="100"
                            Background="Orange" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>